<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
							http://www.springframework.org/schema/webflow/spring-webflow.xsd">

<!-- Flow level variable definition SO flow scope -->
	<var name="booking" class="com.saigonese.fms.domain.Booking" />
 
 
<!-- First "state" listed is first executed - unless <on-start> -->
	<action-state id="selectFlight">
<!-- 	requestParameters.-->
 		<evaluate expression="bookingFlightControllerHelper.validateFlight(requestParameters.flightId)"
			result="booking" />
 		<transition to="collectPassengerInfo" />
		<transition to="InvalidFlightWarning"
			on-exception="com.saigonese.fms.exception.InvalidFlightException" />		
	</action-state>

	<view-state id="collectPassengerInfo" view="collectPassengerInfo.jsp" model="passenger">
		<!-- <transition on="passengerInfoCollected" to="collectBillingDetail" /> -->
		<transition on="passengerInfoCollected" to="creditCard" />
		<transition on="bookingCancelled" to="cancelBooking" />
	</view-state>

	<!-- <view-state id="collectBillingDetail" model="booking">
		<transition on="billingDetailCollected" to="creditCard" />
		<transition on="backToCollectPassengerInfo" to="collectPassengerInfo" />
	</view-state> -->
	
	<subflow-state id="creditCard" subflow="creditCard">
	<!-- INPUT to subFlow -->
	   <!-- <input value="booking.passenger.address" name="homeAddress"/>
	   <input value="booking.billingDetail.billingAddress" name="billingAddress"/> -->
 	<!-- OUTPUT From subFlow -->
       <output name="creditCard"   type="com.saigonese.fms.domain.CreditCard"/>
    	<transition on="creditCardCompleted" to="bookingConfirmation">
    	      	 	<set name="flowScope.booking.creditCard" value="creditCard"/>
    	</transition>
    	<transition on="cancelCreditCard" to="cancelBooking"  />
	</subflow-state>

	<view-state id="bookingConfirmation">
		<transition on="bookingConfirmed" to="processBooking" />
		<transition on="backToCreditCard" to="creditCard" />
	</view-state>
	
	<!-- result="booking.bookingId" saves result of expression -->
	<action-state id="processBooking">
		<evaluate expression="bookingFlightControllerHelper.saveBooking(booking)" result="booking.bookingId"/>
		<transition to="thankPassenger" />
	</action-state>
	
	<view-state id="InvalidFlightWarning">
		<transition to="endState"/>
	</view-state>
	
	<view-state id="thankPassenger" model="booking">
		<transition to="endState"/>
	</view-state>

	<end-state id="endState"/>	

	<end-state id="cancelBooking" view = "bookingCancelled.jsp"/>		
	
	<global-transitions>
		<transition on = "cancel" to="endState" />
	</global-transitions>

</flow>
